<div id="container">
<% @sites.each do |site| %>
      <div class="box <%=site.col %>" style ="background: <%= site.background %>">
        <p class="titulo"><strong><%= site.nombre %></strong></p>
        <img src="<%=site.foto%>">
        <div class="precio"><p id="titulo-dinero"><strong>$ <%= site.precio %></strong></p></div>
        <p><%= site.descripcion.truncate(80) %></p>
        <p><%= site.category.nombre %></p>
    <%= link_to 'Show', site, data: {toggle:"modal", target: "#ajax-modal"} %>
    <%= link_to 'Edit', edit_site_path(site) %>
    <%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
</div>

