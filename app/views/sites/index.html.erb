<h1>Listing sites</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Precio</th>
    <th>Transporte</th>
    <th>Direccion</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.nombre %></td>
    <td><%= site.descripcion %></td>
    <td><%= site.precio %></td>
    <td><%= site.transporte %></td>
    <td><%= site.direccion %></td>
    <td><%= site.category %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

