<%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
    <%= f.input :precio %>
    <%= f.input :transporte %>
    <%= f.input :direccion %>
    <%= f.input :destacado, as: :integer %>
    <%= f.association :category, :collection => Category.all, :prompt => "nombre", :label_method=>:nombre %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
